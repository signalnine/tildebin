{
  "apiVersion": "v1",
  "kind": "List",
  "items": [
    {
      "apiVersion": "networking.k8s.io/v1",
      "kind": "NetworkPolicy",
      "metadata": {
        "name": "default-deny",
        "namespace": "production"
      },
      "spec": {
        "podSelector": {},
        "policyTypes": ["Ingress", "Egress"]
      }
    },
    {
      "apiVersion": "networking.k8s.io/v1",
      "kind": "NetworkPolicy",
      "metadata": {
        "name": "allow-web",
        "namespace": "production"
      },
      "spec": {
        "podSelector": {
          "matchLabels": {"app": "web"}
        },
        "policyTypes": ["Ingress"],
        "ingress": [
          {
            "from": [
              {"podSelector": {"matchLabels": {"app": "frontend"}}}
            ],
            "ports": [{"port": 80, "protocol": "TCP"}]
          }
        ]
      }
    }
  ]
}

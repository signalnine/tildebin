{
  "apiVersion": "v1",
  "kind": "PodList",
  "items": [
    {
      "metadata": {
        "name": "app-pod",
        "namespace": "production"
      },
      "spec": {
        "serviceAccountName": "app-sa",
        "containers": [
          {
            "name": "app",
            "envFrom": [
              {"configMapRef": {"name": "app-config"}},
              {"secretRef": {"name": "app-secret"}}
            ]
          }
        ],
        "volumes": [
          {"name": "data", "persistentVolumeClaim": {"claimName": "app-pvc"}}
        ]
      }
    }
  ]
}
